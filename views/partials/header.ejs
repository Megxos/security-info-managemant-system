<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/img/logo.png" />
    <title><%= title %></title>
    <script src="/js/lib/jquery-3.4.1.js"></script>
    <script
      src="https://kit.fontawesome.com/a06d2c416b.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/animate.css" />
    <script src="/js/lib/bootstrap.min.js"></script>
    <script src="/js/lib/wow.min.js"></script>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <script>
    new WOW().init();
  </script>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light">
      <a href="/">
        <p id="top-name">
          <img src="/img/logo.png" alt="logo" style="width: 50px" />
          Security Information Management System
        </p>
      </a>
      <div class="container">
        <button
          id="menu_btn"
          class="
            navbar-toggler
            d-lg-none
            hamburger hamburger--spin-r
            text-right
          "
          type="button"
          data-toggle="collapse"
          data-target="#collapsibleNavId"
          aria-controls="collapsibleNavId"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
          <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item">
              <a href="/" class="nav-link active" href="" id="home">Home </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/records" id="records">Records</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/complaints" id="complaints"
                >Complaints</a
              >
            </li>
            <li class="nav-item dropdown" id="dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="dropdownId"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
                >More</a
              >
              <div class="dropdown-menu" aria-labelledby="dropdownId">
                <a class="dropdown-item" href="#">Contact</a>
                <a class="dropdown-item" href="#">About</a>
                <% if(current_user){%>
                <a class="dropdown-item" href="/logout"
                  ><button class="btn btn-danger">Logout</button></a
                >
                <%} else{%>
                <a class="dropdown-item" href="/login"
                  ><button class="btn btn-success">Log in</button></a
                >
                <%}%>
              </div>
            </li>
          </ul>
          <div>
            <form
              class="form-inline my-2 my-lg-0"
              method="POST"
              action="/search"
            >
              <div class="input-group mb-3">
                <span class="input-group-text"
                  ><i class="fas fa-search"></i
                ></span>
                <input
                  type="text"
                  class="form-control"
                  name="keyword"
                  placeholder="search"
                  id="search-bar"
                />
                <span class="input-group-text">
                  <select name="filter" id="filter">
                    <option value="name">name</option>
                    <option value="crime">crime</option>
                    <option value="mat_no">Mat No.</option>
                  </select>
                </span>
              </div>
            </form>
            <script src="js/search.js"></script>
          </div>
        </div>
      </div>
    </nav>
    <% if(success && success.length > 0){%>
    <div class="alert alert-success text-center fadeIn animated" id="flash">
      <%= success %>
    </div>
    <%}%> <% if(error && error.length > 0){%>
    <div class="alert alert-danger text-center fadeIn animated" id="flash">
      <%= error %>
    </div>
    <%}%> <% if(warning && warning.length > 0){%>
    <div class="alert alert-warning text-center fadeIn animated" id="flash">
      <%= warning %>
    </div>
    <%}%>
    <div class="search-data animated" id="search-data" style="">
      <big class="text-center"><strong>Search Results</strong></big>
      <div id="list" style="display: flex; flex-direction: column">
        <% data.forEach( (data) =>{%>
        <p class="fadeIn animated">
          <a href="/details/<%= data._id%>"><%= data.name %></a>
        </p>
        <%}) %>
      </div>
    </div>
    <style>
      .search-data {
        padding: 10px;
        display: none;
        position: relative;
        height: auto;
        width: 100%;
        background-color: #f3f3f3;
        color: #3c3c3c;
        justify-content: center;
        flex-direction: column;
        text-align: center;
      }
      #list a {
        color: #3c3c3c !important;
      }
    </style>
    <script></script>
  </body>
</html>
