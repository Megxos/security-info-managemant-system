<%- include("partials/header"); -%>
<div class="register container">
        <div class="container">
            <form action="/register" method="POST">
                <h2 class="text-center">Admin Register</h2>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" name="username" id="username" class="input form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" name="email" id="email" class="input form-control">
                            </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" minlength="6" maxlength="16" class="input form-control">
                </div>
                <button id="add-me">Add me</button>
            </form>
            <div class="text-center mt-2">
                <p class="text-center">Or <a href="/login">Login</a></p>
            </div>
        </div>
    </div>
    <style>
        #add-me{
            width: 100%;
            border: none;
            background-color: purple;
            color: #fff;
            border-radius: 2mm;
            padding: 10px;
        }
        #add-me:hover{
            background-color: #ce06ce;
        }
    </style>
<%- include("partials/footer"); -%>