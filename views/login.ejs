<%- include("partials/header"); -%>
<div class="register container">
    <div class="container">
        <form action="/login" method="POST">
            <h2 class="text-center mt-4">Admin Login</h2>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" name="username" id="username" class="input form-control">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password"class="input form-control">
            </div>
            <button id="add-me">Put me back in</button>
        </form>
        <div class="text-center mt-2">
            <p class="text-center">Or <a href="/register">register</a></p>
        </div>
    </div>
</div>
<style>
    #add-me {
        width: 100%;
        border: none;
        background-color: purple;
        color: #fff;
        border-radius: 2mm;
        padding: 10px;
    }

    #add-me:hover {
        background-color: #ce06ce;
    }
</style>
